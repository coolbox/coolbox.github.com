header,
footer
  background: #eb6746
  padding: 12px 0

header
  nav
    width: 80%
    margin: 0 auto

    a
      color: white
      
      &.home
        color: white
        font-size: 1.4em

section
  padding: 50px 0
  min-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto -4em

  &.content
    margin: 0 auto
    width: 80%
    max-width: 850px
    padding-bottom: 60px   /* Height of the footer */

article

  h1
    margin-bottom: 40px


ul.index
  
  li
    margin: 0 0 75px


footer
  height: 4em

  padding-left: 10%
  padding-right: 10%
  font-size: 0.8em

  div
    display: inline-block
    width: 49.5%

    &.right
      text-align: right;

  p
    margin: 0

  p, a
    color: $white
