header,
footer
  background: #eb6746
  padding: 12px 0

header
  nav
    width: 80%
    margin: 0 auto
    position: relative

    a
      color: white
      
      &.home
        color: white
        font-size: 1em

      &.twitter
          position: absolute
          right: 0
          top: 0

section
  padding: 30px 0
  min-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto -4em

  &.content
    margin: 0 auto
    width: 80%
    max-width: 850px
    padding-bottom: 60px   /* Height of the footer */

  article
    blockquote
      border-left: 1px solid #ccc
      font-style: italic
      padding: 0 20px
      margin: 40px 20px
      font-size: 90%

    ul
      list-style: disc
      list-style-position: inside
      margin: 12px 0 20px 24px

      li
        margin-bottom: 12px
        font-size: 1.1em

    .article-footer
      border-top: 1px solid #ccc
      margin: 60px 0
      padding: 20px 0
      font-size: 0.85em

ul.index
  li
    margin: 0 0 40px

.meta
  margin: 0 0 12px


footer
  height: 4em

  padding-left: 10%
  padding-right: 10%
  font-size: 0.8em

  div
    display: inline-block
    width: 49%

    &.right
      text-align: right;

  p
    margin: 0

  p, a
    color: $white


// Media queries
@media only screen and (min-width: 768px)
  header
    nav
      a.home
        font-size: 1.4em

      a.twitter
        top: 4px

  section
    padding: 50px 0

  ul.index
    li
      margin: 0 0 75px


  footer
    div
      width: 49.5%