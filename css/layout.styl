header,
footer
  background: #eb6746
  padding: 12px 0

header
  margin: 0 0 50px

  nav
    width: 80%
    margin: 0 auto

    a
      letter-spacing: 0.1em
      color: white
      
      &.home
        color: white
        font-size: 1em
        text-transform: uppercase

.container
  margin: 20px auto
  
  section
    margin: 0 auto
    width: 80%


ul.index
  
  li
    margin: 0 0 75px


footer
  padding-left: 10%
  padding-right: 10%
  font-size: 0.8em

  div
    display: inline-block
    width: 49.5%

    &.right
      text-align: right;

  p
    margin: 0

  p, a
    color: $white
